<p style="color: green"><%= notice %></p>

<%= render @location %>

<div>
  <h1>Weather Forecast For This location</h1>
  <% if @forecast && @forecast['hourly'] && @forecast['hourly']['temperature_2m'] %>
    <ul>
      <% @forecast['hourly']['temperature_2m'].first(7).each_with_index do |temperature, index| %>
        <li>
          <% if @forecast['hourly']['time'][index] %>
            Date: <%= @forecast['hourly']['time'][index] %>,
            Max: <%= temperature %>°C,
            Min: <%= @forecast['hourly']['temperature_2m'][index] %>°C
          <% else %>
            <p>Forecast not available for this hour.</p>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>Could not retrieve weather forecast.</p>
  <% end %>
</div>


<div>
  <%= link_to "Edit this location", edit_location_path(@location) %> |
  <%= link_to "Back to locations", locations_path %>

  <%= button_to "Destroy this location", @location, method: :delete %>
</div>
